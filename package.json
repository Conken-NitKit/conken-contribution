{
  "name": "conken-contribution",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "ts-node": "ts-node",
    "start": "npm run ts-node src/run.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx './'",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint-staged": "lint-staged",
    "check-types": "tsc --noEmit",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "npx eslint . --fix",
      "npx prettier --write ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Conken-NitKit/conken-contribution.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Conken-NitKit/conken-contribution/issues"
  },
  "homepage": "https://github.com/Conken-NitKit/conken-contribution#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.15",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "express": "^4.17.3",
    "graphql": "^16.3.0"
  }
}
